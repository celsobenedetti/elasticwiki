{
  "settings": {
    "number_of_shards": 4,
    "number_of_replicas": 1,
    "index.mapping.coerce": false,
    "analysis": {
      "analyzer": {
        "analyzer_for_content": {
          "type": "custom",
          "char_filter": [],
          "tokenizer": "standard",
          "filter": ["asciifolding", "lowercase", "snowball"]
        },
        "analyzer_for_unstemmed_content": {
          "type": "custom",
          "char_filter": [],
          "tokenizer": "standard",
          "filter": ["asciifolding", "lowercase"]
        },
        "shingle": {
          "type": "custom",
          "char_filter": [],
          "tokenizer": "standard",
          "filter": ["asciifolding", "lowercase", "shingle_filter"]
        }
      },
      "filter": {
        "shingle_filter": {
          "type": "shingle",
          "min_shingle_size": 2,
          "max_shingle_size": 3
        }
      }
    }
  },
  "mappings": {
    "dynamic": "strict",
    "properties": {
      "title": {
        "type": "text",
        "analyzer": "analyzer_for_content",
        "fields": {
          "autocomplete": {
            "type": "search_as_you_type"
          }
        }
      },
      "url": {
        "type": "keyword",
        "doc_values": false,
        "index": false
      },
      "content": {
        "type": "text",
        "analyzer": "analyzer_for_content"
      },
      "content_unstemmed": {
        "type": "text",
        "analyzer": "analyzer_for_unstemmed_content",
        "fields": {
          "shingle": {
            "type": "text",
            "analyzer": "shingle"
          }
        }
      },
      "dt_creation": {
        "type": "date"
      },
      "reading_time": {
        "type": "integer"
      }
    }
  }
}
